<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddReviewActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="horizontal">

                <com.suke.widget.SwitchButton
                    android:id="@+id/parking_b"
                    android:layout_width="114dp"
                    android:layout_height="54dp" />

                <TextView
                    android:id="@+id/parking_text"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:text="חנייה נגישה"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">

                <com.suke.widget.SwitchButton
                    android:id="@+id/accessibility_b"
                    android:layout_width="114dp"
                    android:layout_height="52dp" />

                <requestFocus />

                <TextView
                    android:id="@+id/accessibility_t"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:text="הגעה ושהייה נגישה"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:orientation="horizontal">

                <com.suke.widget.SwitchButton
                    android:id="@+id/toilet_b"
                    android:layout_width="113dp"
                    android:layout_height="54dp" />

                <requestFocus />


                <TextView
                    android:id="@+id/toilet_text"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:gravity="center"
                    android:text="שירותים נגישים"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <com.suke.widget.SwitchButton
                    android:id="@+id/service_b"
                    android:layout_width="114dp"
                    android:layout_height="53dp" />

                <requestFocus />


                <TextView
                    android:id="@+id/service_text"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:gravity="center"
                    android:text="שירות ידידותי"
                    android:textSize="24sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/extra_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="הערות נוספות"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/extra_s"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:layout_alignBottom="@+id/XSible"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/XSible"
                android:background="#CCCCCC"
                android:ems="10"
                android:gravity="top"
                android:hint="כאן מומלץ לפרט על דרכי הגעה מומלצות, נקודות שכדאי לשים אליהם לב, וכל דבר שיעזור לאחרים לקבל מידע נוסף אודות נגישות המקום"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="30"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollbars="horizontal"
                android:textColorHint="#CD777777" />

            <TextView
                android:id="@+id/extra_text2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom|center_horizontal"
                android:text="ציון כללי לנגישות במקום"
                android:textSize="18sp" />

            <com.hsalf.smilerating.SmileRating
                android:id="@+id/smile_rating"
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:text="שמירה"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>