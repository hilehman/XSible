<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="horizontal">

            <TextView
                android:id="@+id/review_date"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text=",trhl dfsd fsd "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="30"
                android:padding="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollbars="horizontal"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#4d4d4d"
                android:textStyle="normal"
                app:layout_constraintRight_toRightOf="parent" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="127dp"
        android:layout_height="86dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="125dp"
            android:layout_height="86dp">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/isVX1"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/v" />

                <TextView
                    android:id="@+id/parking_final"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="   חנייה"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/isVX2"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/v" />

                <TextView
                    android:id="@+id/accessibility_final"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="   הגעה ושהייה"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/isVX3"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/v" />

                <TextView
                    android:id="@+id/toilet_final"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="   שירותים"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/isVX4"
                    android:layout_width="0dp"
                    android:layout_height="21dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/v" />

                <TextView
                    android:id="@+id/service_final"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="   שירות ידידותי"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>