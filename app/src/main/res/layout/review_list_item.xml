<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@color/common_google_signin_btn_text_light_default"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:divider="@drawable/places_autocomplete_toolbar_shadow"
        android:dividerPadding="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/review_date"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4FC3F7"
                android:backgroundTint="#4FC3F7"
                android:gravity="center_horizontal|center_vertical"
                android:paddingRight="150dp"
                android:text="תאריך"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="#4FC3F7"
            android:backgroundTint="#4FC3F7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/isVX4"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/v4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4FC3F7"
            android:backgroundTint="#4FC3F7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/isVX1"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/v1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="#4FC3F7"
            android:backgroundTint="#4FC3F7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/isVX2"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/v2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="#4FC3F7"
            android:backgroundTint="#4FC3F7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/isVX3"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/v3" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#039BE5"
        android:backgroundTint="#039BE5" />

    <TextView
        android:id="@+id/title"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:background="#B3E5FC"
        android:backgroundTint="#B3E5FC"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="30"
        android:padding="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbars="horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4d4d4d"
        android:textStyle="normal"
        app:layout_constraintRight_toRightOf="parent" />

</LinearLayout>