<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@color/common_google_signin_btn_text_light_default"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="horizontal">

            <TextView
                android:id="@+id/review_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="תאריך"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="30"
                android:padding="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scrollbars="horizontal"
                android:text="ביקורת משתמש"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#4d4d4d"
                android:textStyle="normal"
                app:layout_constraintRight_toRightOf="parent" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/common_google_signin_btn_text_light_focused"
        android:orientation="vertical"
        android:padding="2dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/common_google_signin_btn_text_light_focused"
            android:padding="2dp"
            android:showDividers="middle|beginning|end">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:showDividers="end"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/isVX1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/v" />

                <TextView
                    android:id="@+id/parking_final"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/accessible_parking"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:showDividers="end"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/isVX2"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/v" />

                <TextView
                    android:id="@+id/accessibility_final"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="4"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingStart="3dp"
                    android:text="@string/accessible_arriving"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:showDividers="end"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/isVX3"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/v" />

                <TextView
                    android:id="@+id/toilet_final"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:paddingStart="3dp"
                    android:text="@string/accessible_toilet"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/isVX4"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/v" />

                <TextView
                    android:id="@+id/service_final"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:paddingStart="3dp"
                    android:text="@string/accessible_crew"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

</LinearLayout>